    <!-- Header -->
    <header class="masthead">
      <div class="container">
        <div class="intro-text">
          <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#portfolio">Explore Our Craftsmanship</a>
        </div>
      </div>
    </header>

	<% if flash[:notice] -%>
		<div class = "alert alert-success animated fadeOut"><%= flash[:notice] %></div>
	<% end %>
	
	<!-- Portfolio Grid -->
    <section class="bg-light" id="portfolio">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Work</h2>
            <h3 class="section-subheading text-muted">Specializing in exclusive exotic wood for decks, roof decks, pergola, siding, framing & more.</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-sm-6 portfolio-item">
			<% @projects.each do |p| %>
				<% if p.column == 1 %>
					  <%= image_tag p.image, :class => "img-responsive project-img" %>
					<div class="portfolio-caption">
					  <h4><%= p.name %></h4>
					</div>
				<% end %>
			<% end %>
          </div>
		  <div class="col-md-4 col-sm-6 portfolio-item">
			<% @projects.each do |p| %>
				<% if p.column == 2 %>
					  <%= image_tag p.image, :class => "img-responsive project-img"  %>
					<div class="portfolio-caption">
					  <h4><%= p.name %></h4>
					</div>
				<% end %>
			<% end %>
          </div>
		  <div class="col-md-4 col-sm-6 portfolio-item">
			<% @projects.each do |p| %>
				<% if p.column == 3 %>
					  <%= image_tag p.image, :class => "img-responsive project-img"  %>
					<div class="portfolio-caption">
					  <h4><%= p.name %></h4>
					</div>
				<% end %>
			<% end %>
          </div>
			
        </div>
      </div>
    </section>


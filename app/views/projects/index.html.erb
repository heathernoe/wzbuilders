			</div>
		</div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Contact Me</h2>
            <h3 class="section-subheading">Polish or English</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
			<%= form_tag("/contact", method: "post") do %>
			  
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
				    <label for="name">Name</label>
                    <input class="form-control" id="name" name="sender" type="text" required oninput="setCustomValidity('')"  oninvalid="this.setCustomValidity('Kindly tell me your name')">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
				    <label for="email">Email</label>
                    <input class="form-control" id="email" name="email" type="email" required oninput="setCustomValidity('')"  oninvalid="this.setCustomValidity('Please tell me where I can reply back')">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
					<label for="phone">Phone (optional)</label>
                    <input class="form-control" id="phone" name="phone" type="tel">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
					<label for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" required oninput="setCustomValidity('')" oninvalid="this.setCustomValidity('What can I help you with?')"></textarea>
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button class="btn btn-secondary btn-xl text-uppercase" type="submit">Send Message</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
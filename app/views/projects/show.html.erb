	<!-- Photo Grid -->
    <section class="bg-light" id="portfolio">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase"><%= @project.name %></h2>
			<h3 class="section-subheading text-muted">Prints available upon request.  <%= link_to 'Contact me', root_path(:anchor => 'contact'), :class => "strong" %> for pricing.</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-sm-6 portfolio-item">
			<% @photos.each do |p| %>
				<% if p.col == 1 %>
					<a class="portfolio-link" onclick="renderPhoto('<%= p.image %>', '<%= p.title %>', '<%= p.description %>')">
					  <div class="portfolio-hover">
						<div class="portfolio-hover-content">
						  <i class="fa fa-plus fa-3x"></i>
						</div>
					  </div>
					  <%= image_tag p.image, :class => "img-responsive project-img" %> 
					</a>
					<div class="portfolio-caption">
					</div>
				<% end %>
			<% end %>
          </div>
		  <div class="col-md-4 col-sm-6 portfolio-item">
			<% @photos.each do |p| %>
				<% if p.col == 2 %>
					<a class="portfolio-link" onclick="renderPhoto('<%= p.image %>', '<%= p.title %>', '<%= p.description %>')">
					  <div class="portfolio-hover">
						<div class="portfolio-hover-content">
						  <i class="fa fa-plus fa-3x"></i>
						</div>
					  </div>
					  <%= image_tag p.image, :class => "img-responsive project-img"  %>
					</a>
					<div class="portfolio-caption">
					</div>
				<% end %>
			<% end %>
          </div>
		  <div class="col-md-4 col-sm-6 portfolio-item">
			<% @photos.each do |p| %>
				<% if p.col == 3 %>
					<a class="portfolio-link" onclick="renderPhoto('<%= p.image %>', '<%= p.title %>', '<%= p.description %>')">
					  <div class="portfolio-hover">
						<div class="portfolio-hover-content">
						  <i class="fa fa-plus fa-3x"></i>
						</div>
					  </div>
					  <%= image_tag p.image, :class => "img-responsive project-img"  %>
					</a>
					<div class="portfolio-caption">
					</div>
				<% end %>
			<% end %>
          </div>
			
        </div>
      </div>
    </section>
	
	<!-- Photo Modal -->
	<div id="photoModal" class="modal">
	  <!-- Modal content -->
	  <div class="modal-content-x">
		<img src="" id="photoModal-img" />
		<span class="close"><i class="fas fa-times"></i></span>
		<h3 id="photoModal-title"></h3>
	  </div>
	</div>
	
	
	
	<!-- Photo Modal Javascript -->
	<script>
		// Get the inner window dims
		var w = window.innerWidth;
		var h = window.innerHeight;
		
		// Get the modal
		var modal = document.getElementById('photoModal');

		// Get the <span> element that closes the modal
		var span = document.getElementsByClassName("close")[0];

		function renderPhoto(image, title) {
			modal.style.display = "block";
			document.getElementById("photoModal-title").innerText = title;
			document.getElementById("photoModal-img").src = image;
			if (w >= 768) {
				document.getElementById("photoModal-img").height = h * 0.85;
			} else {
				document.getElementById("photoModal-img").width = w * 0.80;
			}
		}


		// When the user clicks on x icon, close the modal
		span.onclick = function() {
			modal.style.display = "none";
		}

		// When the user clicks anywhere outside of the modal, close it
		window.onclick = function(event) {
			if (event.target == modal) {
				modal.style.display = "none";
			}
		}
	</script>	